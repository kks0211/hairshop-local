<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hairshop.mapper.BizMemberMapper">

    <resultMap type="BizMemberVO" id="memberMap">
        <id property="email" column="email"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <collection property="authList" resultMap="authMap"></collection>
    </resultMap>

    <resultMap type="AuthVO" id="authMap">
        <result property="email" column="email"/>
        <result property="auth" column="auth"/>
    </resultMap>

    <insert id="joinUser">
        insert into biz_member
            (email, password, name, tel, auth)
        values (#{email}, #{password}, #{name}, #{tel}, #{auth})
    </insert>

    <select id="findByEmail" resultMap="memberMap">
        select email, password, name, tel, auth
        from biz_member
        where email = #{email}
    </select>

    <insert id="mailCf">
        insert into mail_cf (email, cf_no, reg_date)
        values (#{email}, #{cf_no}, now())
    </insert>

    <delete id="deleteCf">
        delete
        from mail_cf
        where email = #{email}
    </delete>

    <select id="readCf" resultType="int">
        select count(*)
        from mail_cf
        where email = #{email}
          and cf_no = #{cf_no}
    </select>

</mapper>
